fun changeCase(str : String) : String {
    val builder = StringBuilder()
    for (i in 0..str.length-1){
        val char : Char = str[i]
        if (char.isUpperCase()) builder.append(char.toLowerCase())
        else if (char.isLowerCase()) builder.append(char.toUpperCase())
        else builder.append(char)
    }
    return builder.toString()
}


fun main() {
var str1:String="Hello, how are you?"
var str2:String="Good bye, see you later"
var str3:String="Thanks, you are a life-saver"
var str4:String="You can edit, run, and share this code"
var str5:String="Каждый Охотник Желает Знать"

    
    
println(changeCase(str1))
println(changeCase(str2))
println(changeCase(str3))
println(changeCase(str4))
println(changeCase(str5))


}
